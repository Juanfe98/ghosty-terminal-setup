custom-shader = shaders/cursor_smear_gentleman.glsl

# Ghostty Terminal Configuration
# Created: 2025-12-17
# Safe configuration - does not affect shell, aliases, or work settings

# Theme - Catppuccin Mocha (dark, modern, easy on eyes)
theme = catppuccin mocha

# Font Configuration
font-family = IosevkaTerm NF
font-size = 14
font-feature = ss01  # Ligatures for coding symbols

# Window Appearance
window-padding-x = 8
window-padding-y = 8
background-opacity = 0.95
background-blur-radius = 20

# Cursor Configuration
cursor-style = block
cursor-style-blink = true

# Performance Optimization
shell-integration-features = no-cursor,no-sudo,no-title

# Keybindings - macOS style
# Tabs
keybind = super+t=new_tab
keybind = super+w=close_surface
keybind = super+shift+left_bracket=previous_tab
keybind = super+shift+right_bracket=next_tab


# Navigation
keybind = alt+k=goto_split:up
keybind = alt+j=goto_split:down
keybind = alt+h=goto_split:left
keybind = alt+l=goto_split:right

# Splits
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down

# Resize Split
keybind = ctrl+shift+j=resize_split:up,10
keybind = ctrl+shift+k=resize_split:down,10
keybind = ctrl+shift+h=resize_split:left,10
keybind = ctrl+shift+l=resize_split:right,10

# Miscellaneous
window-decoration = true
macos-titlebar-style = tabs
confirm-close-surface = false

# Use it by writing 'nvim' first and then the keybinding to open the file with nvim
keybind = alt+s=write_screen_file:paste
